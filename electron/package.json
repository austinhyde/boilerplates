{
  "name": "electron-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -k -n electron,snowpack \"sleep 1; yarn electron-dev\" \"yarn snowpack-dev\"",
    "electron-dev": "nodemon --watch src/main --exec electron src/main/index.js",
    "snowpack-dev": "snowpack dev",
    "build": ": TODO snowpack",
    "dist": "yarn build && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "devDependencies": {
    "@snowpack/plugin-sass": "^1.3.0",
    "@snowpack/plugin-svelte": "^3.5.2",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "rollup": "^2.41.2",
    "sass": "^1.32.8",
    "snowpack": "^3.0.13",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.9"
  },
  "dependencies": {
    "electron": "^13.6.6",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "lodash": "^4.17.21"
  }
}
